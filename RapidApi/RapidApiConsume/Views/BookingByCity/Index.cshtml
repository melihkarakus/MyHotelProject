@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    int count = 0;
}
<div class="container">
    <br />
    <br />
@using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
{
    <label>Şehir Adını Giriniz</label>
    <input type="text" class="form-control" name="cityID" />
    <br />
    <button class="btn btn-primary">Şehir İçin Otel Bul</button>
}
<br />
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Otel Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <th>@item.name</th>
                <th>@item.reviewScore</th>
                <th><a href="#" class="btn btn-dark">Otel Detayları</a></th>
            </tr>
        }
    </table>
</div>
