@model List<ResultLast6BookingsDto>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Müşteri</th>
                                    <th>Şehir</th>
                                    <th>Ülke</th>
                                    <th>Durum Seviye</th>
                                    <th>Durum Açıklama</th>
                                    <th>Müşteri Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.City</td>
                                        <td>
                                            <span>@item.Country</span>
                                        </td>
                                        @if (item.Status == "Onaylandı")
                                        {
                                            <td>
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-success" style="width: 100%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                        }
                                        @if (item.Status == "Beklemede")
                                        {
                                            <td>
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                        }
                                        @if (item.Status == "Onay Bekliyor")
                                        {
                                            <td>
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-warning" style="width: 100%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                        }
                                        @if (item.Status == "İptal Edildi")
                                        {
                                            <td>
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-danger" style="width: 100%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                        }
                                        <td>@item.Status</td>
                                        <td>@item.SpecialRequest</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
