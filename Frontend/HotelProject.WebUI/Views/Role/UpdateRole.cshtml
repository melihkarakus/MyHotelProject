@using HotelProject.WebUI.Models.Role
@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Role Güncelleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="RoleID" class="form-control" />
    <label>Rol Adı</label>
    <input type="text" asp-for="RoleName" class="form-control" />
    <br />
    <button class="btn mb-1 btn-rounded btn-primary">Rol Güncelle</button>
</form>
