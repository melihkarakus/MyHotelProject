@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>City</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                                        <td>@item.Name @item.Surname</td>
                                        <td>
                                            <span>@item.City</span>
                                        </td>
                                        <td><i class="fa fa-circle-o text-success  mr-2"></i> @item.PhoneNumber</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <br />
                        <a href="/Register/Index" class="btn mb-1 btn-rounded btn-primary">Yeni Kullanıcı Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
